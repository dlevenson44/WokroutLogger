<h1><%= @workout.name %></h1>

<h3>Wokrout Type: <%= @workout.name %></h3>
<h3>Muscle Group: <%= @workout.muscle_group %></h3>
<h3>Sets: <%= @workout.sets %></h3>
<h3>Reps: <%= @workout.reps %></h3>
<h3>Weight: <%= @workout.weight %></h3>
<h3>Date: <%= @workout.date %></h3>

<%= link_to "Edit #{@workout.name}", edit_workout_path(@workout) %>

<%= form_for @workout, html: {method: 'delete'} do |f| %>
	<%= f.submit "Delete Workout" %>
<% end %>

<%= link_to "All Workouts", workouts_path %>

<%= render partial: 'footer' %>